@page
@model E_Shop.Pages.MaBoutique.LivraisonType.GestionLivraisonTypeModel
@{
}
<form method="post">
    <button type="submit" asp-page-handler="CrLivraisonType" class="btn btn-primary">Ajouter un nouveau type de livraison</button>
</form>
<div class="d-inline-block mr-5">
    @if (Model.Livraisontypes.Count == 0)
    {
        <div>
            Liste vide

        </div>
    }
    else
    {

        <div class="card">
            <div class="card-header">
                <div class="d-inline">Liste des Types de Livraison</div>
            </div>
            <div class="card-body">
                <table class="table">
                    <thead class="thead-light"><tr><th scope="col">Types de livraison</th><th scope="col">Délai</th><th>Coût</th><th scope="col">Coût par kilo supplémentaire</th><th scope="col">Action</th></tr></thead>

                    @foreach (var item in Model.Livraisontypes)
                    {
                        <tbody>
                            <tr>
                                <th scope="row" width="50%">@item.Lvrdesignation</th>
                                <td width="15%">@item.Lvrdelai</td>
                                <td width="15%">@item.Lvrcout</td>
                                <td width="15%">@item.LvrcoutPsup</td>
                                <td>
                                    <nav class="navbar navbar-expand-lg navbar-light bg-light">
                                        <a class="navbar-brand" href="#"></a>
                                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navCatAct" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                                            <span class="navbar-toggler-icon"></span>
                                        </button>
                                        <div id="navCatAct" class="navbar-collapse collapse d-sm-inline-flex justify-content-between flex-wrap">
                                            <ul class="navbar-nav flex-grow-1">
                                                <li class="nav-item">
                                                    <form method="post">
                                                        <input hidden asp-for="@Model.lvrTypeId" value="@item.Lvrtypid" />
                                                        <button type="submit" asp-page-handler="UpLivraisonType" class="btn btn-primary">Modifier<span class='sr-only'>(current)</span></button>
                                                        <button type="submit" asp-page-handler="DelLivraisonType" class="btn btn-primary">Supprimer<span class='sr-only'>(current)</span></button>
                                                    </form>
                                                </li>
                                            </ul>
                                        </div>
                                    </nav>
                                </td>
                            </tr>
                        </tbody>
                    }
                </table>
            </div>
        </div>

    }
</div>

    <a href="/MaBoutique/TableauDeBord" class="btn btn-primary">Retour au tableau de bord</a>



