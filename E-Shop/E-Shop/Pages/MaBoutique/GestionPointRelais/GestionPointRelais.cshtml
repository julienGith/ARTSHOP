@page
@model E_Shop.Pages.MaBoutique.GestionPointRelais.GestionPointRelaisModel
@{
}

<a href="/MaBoutique/TableauDeBord" class="btn btn-primary">Retour au tableau de bord</a>
<form method="post">
    <button type="submit" asp-page-handler="CrLivraisonType" class="btn btn-primary">Ajouter un nouveau type de livraison</button>
</form>
<div class="d-inline-block mr-5">
    @if (Model.pointRelais.Count == 0)
    {
        <div>
            Liste vide

        </div>
    }
    else
    {

        <div class="card">
            <div class="card-header">
                <div class="d-inline">Liste des Points Relais</div>
            </div>
            <div class="card-body">
                <table class="table">
                    <thead class="thead-light"><tr><th scope="col">Nom du Point Relais</th><th scope="col">Numéro</th><th>Rue</th><th scope="col">Ville</th><th scope="col">Action</th></tr></thead>

                    @foreach (var item in Model.pointRelais)
                    {
                        <tbody>
                            <tr>
                                <th scope="row" width="50%">@item.PrNom</th>
                                <td width="15%">@item.Num</td>
                                <td width="15%">@item.Rue</td>
                                <td width="15%">@item.Ville</td>
                                <td>
                                    <nav class="navbar navbar-expand-lg navbar-light bg-light">
                                        <a class="navbar-brand" href="#"></a>
                                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navPRAct" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                                            <span class="navbar-toggler-icon"></span>
                                        </button>
                                        <div id="navPRAct" class="navbar-collapse collapse d-sm-inline-flex justify-content-between flex-wrap">
                                            <ul class="navbar-nav flex-grow-1">
                                                <li class="nav-item">
                                                    <form method="post">
                                                        <input hidden asp-for="@Model.localisationId" value="@item.Localisationid" />
                                                        <button type="submit" asp-page-handler="Up" class="btn btn-primary">Modifier<span class='sr-only'>(current)</span></button>
                                                        <button type="submit" asp-page-handler="Del" class="btn btn-primary">Supprimer<span class='sr-only'>(current)</span></button>
                                                    </form>
                                                </li>
                                            </ul>
                                        </div>
                                    </nav>
                                </td>
                            </tr>
                        </tbody>
                    }
                </table>
            </div>
        </div>

    }
</div>

