@page
@model E_Shop.Pages.Boutique.CreateBoutiqueStep9Model
@{
}
<div class="row justify-content-center">
    <div>
        <form method="post" enctype="multipart/form-data">
            <h4> Etape 8 </h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="step9.FileNameImg"></label>
                <input type="file" name="photo" accept="image/*" asp-for="step9.FileNameImg" class="form-control" />
                <span asp-validation-for="step9.FileNameImg" class="text-danger"></span>
            </div>
            <button type="submit" asp-page-handler="Img" class="btn btn-primary">Envoyer</button>
        </form>
        @if (Model.step9 != null)
        {
            <br />
            <span>
                <img src="@Model.step9.Lien" />
            </span>
            <form method="post">
                <button id="btnNext" type="submit" asp-page-handler="Next" class="btn btn-primary">Suivant</button>
            </form>

        }
        <form method="post">
            <button type="submit" asp-page-handler="Back" class="btn btn-primary">Précédent</button>
        </form>
    </div>
</div>