@page
@model E_Shop.Pages.Boutique.CreateBoutiqueStep8Model
@{
}
<iframe width="420" height="315"
        src="https://www.youtube.com/embed/tgbNymZ7vqY">
</iframe>
<div class="row justify-content-center">
    <div>
        <form method="post" enctype="multipart/form-data">
            <h4> Etape 8 </h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="step8.FileNameImg1"></label>
                <input type="file" name="photo1" accept="image/*" asp-for="step8.FileNameImg1" class="form-control" />
                <span asp-validation-for="step8.FileNameImg1" class="text-danger"></span>
            </div>
            <button type="submit" asp-page-handler="Img1" class="btn btn-primary">Envoyer</button>
            @if (Model.step8!=null)
            {
        
            <br />
            <style>
                div.imageborder {
                    border-radius: 999em;
                    width: 125px;
                    height: 125px;
                    padding: 1px;
                    line-height: 0;
                    border: 5px solid #808080;
                    background-color: #eee;
                }

                img {
                    border-radius: 999em;
                    height: 100%;
                    width: 100%;
                    margin: 0;
                }
            </style>
                <div class="imageborder">
                    <span>
                        <img src="@Model.step8.Lien" height="125" width="125" />
                    </span>
                </div>
        
            }
            <div class="form-group">
                <label asp-for="step8.FileNameImg2"></label>
                <input type="file" asp-for="step8.FileNameImg2" class="form-control" />
                <span asp-validation-for="step8.FileNameImg2" class="text-danger"></span>
            </div>
            <button type="submit" asp-page-handler="Img2" class="btn btn-primary">Envoyer</button>

            <div class="form-group">
                <label asp-for="step8.VideoLink"></label>
                <input asp-for="step8.VideoLink" class="form-control" />
                <span asp-validation-for="step8.VideoLink" class="text-danger"></span>
            </div>


            <button id="btnNext" type="submit" class="btn btn-primary">Suivant</button>
            <button type="submit" asp-page-handler="Back" class="btn btn-primary">Précédent</button>

        </form>
    </div>
</div>