@page
@model E_Shop.Pages.Boutique.CreateBoutiqueStep8Model
@{
}
<iframe width="420" height="315"
        src="https://www.youtube.com/embed/tgbNymZ7vqY">
</iframe>
<div class="row justify-content-center">
    <div>
        <form method="post" enctype="multipart/form-data">
            <h4> Etape 8 </h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="step8.FileNameImg"></label>
                <input type="file" name="photo" accept="image/*" asp-for="step8.FileNameImg" class="form-control" />
                <span asp-validation-for="step8.FileNameImg" class="text-danger"></span>
            </div>
            <button type="submit" asp-page-handler="Img" class="btn btn-primary">Envoyer</button>
        </form>

        @if (Model.step8 != null)
        {

            <br />
            <style>
                div.imageborder {
                    border-radius: 999em;
                    width: 125px;
                    height: 125px;
                    padding: 1px;
                    line-height: 0;
                    border: 5px solid #808080;
                    background-color: #eee;
                }

                img {
                    border-radius: 999em;
                    height: 100%;
                    width: 100%;
                    margin: 0;
                }
            </style>
            <div class="imageborder">
                <span>
                    <img src="@Model.step8.Lien" />
                </span>
            </div>
            <form method="post">
                <button id="btnNext" type="submit" asp-page-handler="Next" class="btn btn-primary">Suivant</button>
            </form>
        }
    <form method="post">
        <button type="submit" asp-page-handler="Back" class="btn btn-primary">Précédent</button>
    </form>
    </div>
</div>